<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true"
    tools:context=".CollectionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="20dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvCollectionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waste Collection"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tvCollectionIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Track your household waste pickups, view collector details, and report missed collections easily."
            android:textSize="16sp"
            android:textColor="@color/grayDark"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="24dp"
            android:paddingHorizontal="16dp" />

        <!-- Card 1: Collection Status -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCollectionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="5dp"
            android:backgroundTint="#E8F5E9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imgCollector"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/wastecollector"
                    android:layout_marginBottom="12dp"
                    android:contentDescription="Collector Icon"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/tvLastPickup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Pickup: 3 Nov, 2025 - 7:45 AM"
                    android:textSize="16sp"
                    android:textColor="@color/primary"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tvNextPickup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next Pickup: Tomorrow - 8:00 AM"
                    android:textSize="16sp"
                    android:textColor="@color/primaryVariant"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnTrackCollector"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:text="Track Collector"
                    android:textColor="@color/onPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:background="@drawable/bg_gradient_button"
                    android:elevation="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card 2: Waste Summary -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardWasteSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="5dp"
            android:backgroundTint="#E0F7FA">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvWasteCollected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today's Waste Collected: 4.5 kg"
                    android:textSize="18sp"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="6dp"
                    android:textAlignment="center"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvWasteType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type: Wet + Dry"
                    android:textSize="16sp"
                    android:textColor="@color/grayDark"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_marginBottom="12dp" />

                <ProgressBar
                    android:id="@+id/progressWaste"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:progress="75"
                    android:max="100"
                    android:layout_marginHorizontal="20dp"
                    android:progressTint="@color/primary"
                    android:backgroundTint="@color/grayLight"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvCollectionEfficiency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Collection Efficiency: 75%"
                    android:textSize="16sp"
                    android:textColor="@color/grayDark"
                    android:textAlignment="center"
                    android:gravity="center" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btnReportMissedPickup"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="Report Missed Pickup"
                android:textColor="@color/onPrimary"
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="center"
                android:textAlignment="center"
                android:elevation="4dp"
                android:background="@drawable/rounded_button"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnViewSchedule"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="View Schedule"
                android:textColor="@color/onPrimary"
                android:textStyle="bold"
                android:textSize="13sp"
                android:gravity="center"
                android:textAlignment="center"
                android:elevation="4dp"
                android:background="@drawable/bg_gradient_button"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
