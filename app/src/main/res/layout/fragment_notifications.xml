<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true"
    tools:context=".NotificationsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/tvNotificationsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvNotificationsSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stay updated with alerts about collections, rewards, and sustainability tips!"
            android:textSize="16sp"
            android:textColor="@color/grayDark"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="24dp"
            android:paddingHorizontal="12dp" />

        <!-- Notification 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardNotification1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="5dp"
            android:backgroundTint="#E0F7FA">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_refresh"
                    android:contentDescription="Collection Update Icon"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvNotificationTitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Collection Day Reminder"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvNotificationDesc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Waste pickup scheduled tomorrow at 9:00 AM."
                        android:textSize="15sp"
                        android:textColor="@color/grayDark" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Notification 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardNotification2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="5dp"
            android:backgroundTint="#E8F5E9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_rewards"
                    android:contentDescription="Reward Icon"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvNotificationTitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reward Unlocked!"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvNotificationDesc2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="You earned 100 Green Points for reporting an issue."
                        android:textSize="15sp"
                        android:textColor="@color/grayDark" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Notification 3 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardNotification3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="5dp"
            android:backgroundTint="#FFF8E1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_settings"
                    android:contentDescription="Tips Icon"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvNotificationTitle3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sustainability Tip"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvNotificationDesc3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Try composting your food scraps at home to reduce waste!"
                        android:textSize="15sp"
                        android:textColor="@color/grayDark" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Clear All Button -->
        <Button
            android:id="@+id/btnClearNotifications"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:text="Clear All"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@color/primaryVariant"
            android:elevation="4dp"
            android:layout_marginTop="12dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
