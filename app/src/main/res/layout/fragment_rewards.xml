<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true"
    tools:context=".RewardsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/tvRewardsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Green Rewards"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvRewardsSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Earn points for eco-friendly actions and redeem rewards!"
            android:textSize="16sp"
            android:textColor="@color/grayDark"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="24dp"
            android:paddingHorizontal="12dp" />

        <!-- Points Overview Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPointsOverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:cardElevation="5dp"
            android:backgroundTint="#E0F7FA"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_rewards"
                    android:contentDescription="Rewards Icon"
                    android:layout_marginBottom="10dp"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/tvTotalPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Points: 1245"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvNextGoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next Goal: 1500 points (Plant a Tree!)"
                    android:textSize="15sp"
                    android:textColor="@color/grayDark"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnRedeemNow"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:text="Redeem Now"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@color/primary"
                    android:elevation="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Recent Achievements Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardAchievements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:cardElevation="5dp"
            android:backgroundTint="#E8F5E9"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_rewards"
                    android:contentDescription="Achievements Icon"
                    android:layout_marginBottom="8dp"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/tvAchievementsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent Achievements"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvAchievementsList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ† Segregation Star\nðŸŒ¿ Compost Hero\nâ™»ï¸ Recycling Pro"
                    android:textSize="15sp"
                    android:textColor="@color/grayDark"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_marginBottom="12dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Available Rewards Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardAvailableRewards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:cardElevation="5dp"
            android:backgroundTint="#FFF8E1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_rewards"
                    android:contentDescription="Available Rewards Icon"
                    android:layout_marginBottom="10dp"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/tvAvailableRewardsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available Rewards"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvAvailableRewardsList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŒ± 10% off compost kit\nðŸš´ Free pickup for recyclables\nðŸŒ³ Tree planting sponsorship"
                    android:textSize="15sp"
                    android:textColor="@color/grayDark"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnViewAllRewards"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:text="View All Rewards"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@color/primaryVariant"
                    android:elevation="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
