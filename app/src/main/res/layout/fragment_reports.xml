<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_reports"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true"
    tools:context=".ReportsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/tvReportsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waste Collection Reports"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tvReportsSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Track your daily, weekly, and monthly waste collection performance."
            android:textSize="16sp"
            android:textColor="@color/grayDark"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="24dp"
            android:paddingHorizontal="12dp" />

        <!-- ðŸŒ¿ Daily Report Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardDailyReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:cardElevation="5dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#E8F5E9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_recycle"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/tvDailyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily Report"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="6dp" />

                <!-- ðŸ”„ ProgressBar for Daily -->
                <ProgressBar
                    android:id="@+id/progressDaily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvDailyStats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textSize="15sp"
                    android:textColor="@color/grayDark"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnViewDailyReport"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:text="View Details"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@color/primary"
                    android:elevation="5dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ðŸŒŠ Weekly Report Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardWeeklyReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:cardElevation="5dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#E0F7FA">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_rewards"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/tvWeeklyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weekly Summary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="6dp" />

                <!-- ðŸ”„ ProgressBar for Weekly -->
                <ProgressBar
                    android:id="@+id/progressWeekly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvWeeklyStats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textSize="15sp"
                    android:textColor="@color/grayDark"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnViewWeeklyReport"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:text="View Details"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@color/primaryVariant"
                    android:elevation="5dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ðŸŒž Monthly Report Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardMonthlyReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:cardElevation="5dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#FFF8E1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_refresh"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/tvMonthlyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monthly Overview"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="6dp" />

                <!-- ðŸ”„ ProgressBar for Monthly -->
                <ProgressBar
                    android:id="@+id/progressMonthly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvMonthlyStats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textSize="15sp"
                    android:textColor="@color/grayDark"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnViewMonthlyReport"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:text="View Details"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@color/primary"
                    android:elevation="5dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
