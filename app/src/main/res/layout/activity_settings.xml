<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".SettingsActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarSettings"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        app:title="Settings"
        app:titleCentered="true"
        app:titleTextColor="@color/onPrimary"
        app:navigationIcon="@drawable/ic_settings"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Settings Content -->
    <LinearLayout
        android:id="@+id/settingsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarSettings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Notifications -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchNotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable Notifications"
            android:textSize="18sp"
            android:textColor="@color/primary"
            android:checked="true"
            android:paddingVertical="12dp"
            android:paddingHorizontal="8dp" />

        <!-- Dark Mode -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchDarkMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dark Mode"
            android:textSize="18sp"
            android:textColor="@color/primary"
            android:paddingVertical="12dp"
            android:paddingHorizontal="8dp"
            android:layout_marginTop="16dp" />

        <!-- Language Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilLanguage"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Language"
            app:startIconDrawable="@drawable/ic_settings"
            app:boxStrokeColor="@color/primary"
            android:layout_marginTop="24dp">

            <AutoCompleteTextView
                android:id="@+id/etLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/material_dynamic_neutral70"
                android:textSize="17sp"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- About App Button -->
        <Button
            android:id="@+id/btnAbout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="About GreenTrack"
            android:textColor="@color/onPrimary"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="28dp"
            android:elevation="3dp"
            android:background="@drawable/rounded_button" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
