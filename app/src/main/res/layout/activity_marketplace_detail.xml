<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MarketplaceDetailActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarMarketplaceDetail"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        app:title="Marketplace Item"
        app:titleCentered="true"
        app:titleTextColor="@color/onPrimary"
        app:navigationIcon="@drawable/ic_settings"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbarMarketplaceDetail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Product Image -->
            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp"
                android:scaleType="fitCenter"
                android:background="@drawable/bg_card"
                android:src="@drawable/ic_recycle"
                android:contentDescription="Product Image" />

            <!-- Product Name -->
            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organic Compost Bin"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginBottom="8dp"
                android:gravity="center" />

            <!-- Product Price -->
            <TextView
                android:id="@+id/tvProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹799"
                android:textSize="18sp"
                android:textColor="@color/grayDark"
                android:layout_marginBottom="12dp"
                android:gravity="center" />

            <!-- Product Description -->
            <TextView
                android:id="@+id/tvProductDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This eco-friendly compost bin helps convert kitchen waste into rich organic fertilizer. Perfect for households aiming for zero waste."
                android:textSize="16sp"
                android:textColor="@color/grayDark"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="28dp" />

            <!-- Buttons Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <!-- Contact Seller -->
                <Button
                    android:id="@+id/btnContactSeller"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="52dp"
                    android:text="Contact Seller"
                    android:textColor="@color/onPrimary"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/bg_gradient_button"
                    android:elevation="3dp"
                    android:layout_marginEnd="8dp" />

                <!-- Buy Now -->
                <Button
                    android:id="@+id/btnBuyNow"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="52dp"
                    android:text="Buy Now"
                    android:textColor="@color/onPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:background="@drawable/rounded_button"
                    android:elevation="3dp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
