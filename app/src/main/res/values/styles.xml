<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Global CardView Style -->
    <style name="Widget.GreenTrack.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">6dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <!-- Global Button Style -->
    <style name="Widget.GreenTrack.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Toolbar Title Style -->
    <style name="Widget.GreenTrack.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">@color/onPrimary</item>
        <item name="android:background">@color/primary</item>
        <item name="subtitleTextColor">@color/secondary</item>
    </style>

    <!-- Text Styles -->
    <style name="Text.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/onSurface</item>
    </style>

    <style name="RoundedDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


</resources>
